@model ToDoModel



<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">

            <h4 class="text-center my-3 pb-3">Edit</h4>

            <form method="post" class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                <div asp-validation-summary="ModelOnly"></div>
              <div class="col-12">
                <div class="form-outline">
                  <input  asp-for="Text" type="text" class="form-control" autocomplete="off" placeholder="Enter a task here " />
                  
                </div>
              </div>

              <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>

              <div class="col-12">
                <button asp-controller="GetTasks"  type="submit" class="btn btn-warning">Get tasks</button>
              
              </div>
            </form>
  
          </div>
        </div>
      </div>
    </div>
  </div>
</section>