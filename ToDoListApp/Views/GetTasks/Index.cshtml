@model IEnumerable<ToDoModel>
<table class="table mb-4">
	<thead>
		<tr>
			<th scope="col"></th>
			<th scope="col">Todo item</th>
			<th scope="col">Actions</th>
			<th scope="col">DateTime</th>
			<th scope="col">  </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var x in Model)
		{
			<tr>
				<th scope="row"></th>
				<td>@x.Text</td>
				<td>
					<a asp-action="Edit" asp-route-id="@x.Id" type="submit" class="fa fa-edit me-2">Edit</a>
					<a asp-action="Delete" asp-route-id="@x.Id" onclick="return confirm('Are you sure you want to delete this Task:@x.Text ?')" type="submit" class="fa fa-trash me-2">Delete</a>
				</td>
				<td>@x.CreatedAt</td>

			</tr>
		}

	</tbody>
</table>
<a asp-controller="ToDo" type="button">Add Task</a>
